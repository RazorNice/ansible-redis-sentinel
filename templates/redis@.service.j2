[Unit]
Description=Redis instance %i
After=network.target

[Service]
Type=simple
User=redis
Group=redis
RuntimeDirectory=redis-%i
RuntimeDirectoryMode=0755
ExecStart=/opt/redis/bin/redis-server /etc/redis/redis-%i.conf
PIDFile=/run/redis-%i/redis-%i.pid


Restart=on-failure

[Install]
WantedBy=multi-user.target
